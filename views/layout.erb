          <ul class="nav" style="float:right;"></ul>
          <form class="pull-left" action="" style="display:none;">
            <input type="text" name="q" placeholder="Search" value="<%= @query %>">
          </form>
        </div>
      </div>
    </div>
    

  <%= yield %>

       
