    <script>
      $(document).ready(function() {


        $("#search")
          .focus(function() {
                if (this.value === this.defaultValue) {
                    this.value = '';
                }
          })
          .blur(function() {
                if (this.value === '') {
                    this.value = this.defaultValue;
                }
        });

        SC.initialize({
          client_id: "3c3aecf09c9a6e46e721f6118612ca59",
        });
        
        SC.get("/tracks?client_id=3c3aecf09c9a6e46e721f6118612ca59&filter=streamable&order=hotness&q=<%= @query %>", function(trackData){
          console.log(trackData);
          for (i=0;i<=49;i++) {
            if (trackData[i].artwork_url != null) {
              var artwork = trackData[i].artwork_url
            }
            var alttag = trackData[i].title
            var streamurl = trackData[i].stream_url
            var permaurl = trackData[i].permalink_url
            var client_id = "3c3aecf09c9a6e46e721f6118612ca59"
            var description = trackData[i].description
            var title = trackData[i].title
            if (artwork != null && streamurl != null) {
              $('.media-grid').append('<li><a class="test" href="#" data-url="' + streamurl + '" onclick="swapPlayer(\'' + encodeURIComponent(streamurl) + '\',\'' + escape(title) + '\')" data-content="And here\'s some amazing content. It\'s very engaging. right?"><img class="thumbnail" src="' + artwork + '"></a></li>');
            }
            var artwork = null
          }
        });
        
      });

      $('.media-grid a').live('click', function(){
        $('.media-grid a').removeClass('playing');
        $(this).addClass('playing');
      })

      $('.media-grid a').live('hover', function(){
        $(this).popover('show');
      })

      function swapPlayer(url,title) {
          $('#player, .nowPlaying').remove();
          $('.nav').append('<li class="nowPlaying"><a href="#">' + unescape(title) + '</a></li>');
          $('.nav').before('<audio id="player" src="' + decodeURIComponent(url) + '?client_id=3c3aecf09c9a6e46e721f6118612ca59" type="audio/mp3" preload="auto" >');
          var audio_file1 = document.getElementById('player');
          audio_file1.play();     
        }

      function swapPlayerNew(url) {   
        $('.stratus-bottom').remove();   
        $.stratus({
          auto_play: true,
          animate: false,
          color: "000000",
          links: [ { url: decodeURIComponent(url) } ]
        });
      }
      

    </script>
